{
  "main": "main.js",
  "name": "fake-homily-link",
  "private": true,
  "version": "1.0.3",
  "author": "hxl",
  "description": "学习项目",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "npm run build && electron-builder",
    "build-icon": "electron-icon-builder --input=./public/icon.png --output=build --flatten",
    "release": "electron-builder"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@lucky-canvas/vue": "^0.1.11",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.1",
    "axios": "^1.10.0",
    "echarts": "^6.0.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.9.8",
    "lucky-canvas": "^1.7.27",
    "moment": "^2.30.1",
    "pinia": "^3.0.3",
    "three": "^0.178.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "less": "^4.4.1",
    "sass": "^1.92.1",
    "terser": "^5.44.0",
    "vite": "^6.2.6"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "Homily Link",
    "copyright": "Copyright © 2025 hxl",
    "directories": {
      "buildResources": "build",
      "output": "dist_electron"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "msi",
        "nsis"
      ]
    },
    "mac": {
      "icon": "public/app1.icns",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "icon": "public/app1.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      "github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NoNinetynine/electronTest.git"
  }
}